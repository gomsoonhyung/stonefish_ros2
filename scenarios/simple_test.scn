<?xml version="1.0"?>
<scenario>
	<environment>
		<ned latitude="40.0" longitude="3.0"/>
		<ocean>
			<water density="1025.0" jerlov="0.25"/>
			<waves height="0.0"/>
		</ocean>
		<atmosphere>
			<sun azimuth="120.0" elevation="50.0"/>
		</atmosphere>
	</environment>

	<materials>
		<material name="Neutral" density="1000.0" restitution="0.5"/>
		<material name="Rock" density="3000.0" restitution="0.8"/>
		<friction_table>
			<friction material1="Neutral" material2="Neutral" static="0.5" dynamic="0.2"/>
			<friction material1="Neutral" material2="Rock" static="0.2" dynamic="0.1"/>
			<friction material1="Rock" material2="Rock" static="0.9" dynamic="0.7"/>
		</friction_table>
	</materials>

	<looks>
		<look name="yellow" rgb="1.0 0.9 0.0" roughness="0.3"/>
		<look name="seabed" rgb="0.7 0.7 0.5" roughness="0.9"/>
	</looks>

	<static name="Bottom" type="plane">
		<material name="Rock"/>
		<look name="seabed"/>
		<world_transform rpy="0.0 0.0 0.0" xyz="0.0 0.0 10.0"/>
	</static>

	<!-- Simple robot without include -->
	<robot name="TESTBOT" fixed="false" self_collisions="false">
		<base_link name="Body" type="sphere" physics="submerged" buoyant="true">
			<dimensions radius="0.5"/>
			<origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
			<material name="Neutral"/>
			<look name="yellow"/>
		</base_link>

		<sensor name="dynamics" type="odometry" rate="30.0">
			<link name="Body"/>
			<origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
			<ros_publisher topic="/TESTBOT/dynamics"/>
		</sensor>

		<world_transform rpy="0.0 0.0 0.0" xyz="0.0 0.0 3.0"/>
	</robot>
</scenario>
