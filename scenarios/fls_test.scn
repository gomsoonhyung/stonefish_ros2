<?xml version="1.0"?>
<scenario>
	<environment>
		<ned latitude="41.5" longitude="2.0"/>
		<sun azimuth="45.0" elevation="60.0"/>
		<ocean>
			<waves height="0.0"/>
			<water density="1031.0" jerlov="0.2"/>
		</ocean>
	</environment>

	<materials>
		<material name="Neutral" density="1031.0" restitution="0.5"/>
		<material name="Rock" density="3000.0" restitution="0.8"/>
		<material name="Concrete" density="2400.0" restitution="0.6"/>
		<material name="Fiberglass" density="1500.0" restitution="0.3"/>
		<material name="Aluminium" density="2710.0" restitution="0.7"/>
	</materials>

	<looks>
		<look name="yellow" rgb="1.0 1.0 0.0" roughness="0.3"/>
		<look name="red" rgb="1.0 0.0 0.0" roughness="0.3"/>
		<look name="gray" gray="0.5" roughness="0.4" metalness="0.3"/>
		<look name="seabed" rgb="0.7 0.7 0.5" roughness="0.9"/>
		<look name="duct" gray="0.3" roughness="0.4" metalness="0.5"/>
		<look name="propeller" gray="0.2" roughness="0.3" metalness="0.8"/>
		<look name="manipulator" gray="0.4" roughness="0.4" metalness="0.6"/>
	</looks>

	<!-- Seabed -->
	<static name="Bottom" type="plane">
		<material name="Rock"/>
		<look name="seabed"/>
		<world_transform rpy="0.0 0.0 0.0" xyz="0.0 0.0 5.0"/>
	</static>

	<!-- START MARKER - Yellow sphere floating in air -->
	<static name="StartMarker" type="sphere">
		<dimensions radius="0.4"/>
		<material name="Neutral"/>
		<look name="yellow"/>
		<world_transform rpy="0.0 0.0 0.0" xyz="0.0 0.0 -1.0"/>
	</static>

	<!-- GOAL MARKER - Red sphere floating in air at goal position -->
	<static name="GoalMarker" type="sphere">
		<dimensions radius="0.4"/>
		<material name="Neutral"/>
		<look name="red"/>
		<world_transform rpy="0.0 0.0 0.0" xyz="20.0 0.0 -1.0"/>
	</static>

	<!-- LEFT OBSTACLE - Vertical cylinder on the left side of path -->
	<!-- Position: (10, -3, 3) - 10m along path, 3m to the left, at depth 3m -->
	<static name="ObstacleLeft" type="cylinder">
		<dimensions radius="1.0" height="4.0"/>
		<material name="Concrete"/>
		<look name="gray"/>
		<world_transform rpy="0.0 0.0 0.0" xyz="10.0 -3.0 3.0"/>
	</static>

	<!-- RIGHT OBSTACLE - Vertical cylinder on the right side of path -->
	<!-- Position: (10, 3, 3) - 10m along path, 3m to the right, at depth 3m -->
	<static name="ObstacleRight" type="cylinder">
		<dimensions radius="1.0" height="4.0"/>
		<material name="Concrete"/>
		<look name="gray"/>
		<world_transform rpy="0.0 0.0 0.0" xyz="10.0 3.0 3.0"/>
	</static>

	<!-- Girona500 AUV -->
	<!-- Start position: (0, 0, 3) - at start marker, 3m depth -->
    <include file="girona500_robot.scn">
		<arg name="robot_name" value="GIRONA500"/>
	</include>
</scenario>