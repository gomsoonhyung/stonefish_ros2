<?xml version="1.0"?>
<scenario>
	<environment>
		<ned latitude="41.5" longitude="2.0"/>
		<sun azimuth="45.0" elevation="60.0"/>
		<ocean>
			<waves height="0.0"/>
			<water density="1031.0" jerlov="0.2"/>
		</ocean>
	</environment>

	<materials>
		<material name="Neutral" density="1031.0" restitution="0.5"/>
		<material name="Rock" density="3000.0" restitution="0.8"/>
	</materials>

	<looks>
		<look name="yellow" rgb="1.0 1.0 0.0" roughness="0.3"/>
		<look name="green" rgb="0.0 1.0 0.0" roughness="0.3"/>
		<look name="orange" rgb="1.0 0.5 0.0" roughness="0.3"/>
		<look name="magenta" rgb="1.0 0.0 1.0" roughness="0.3"/>
		<look name="lightblue" rgb="0.0 0.5 1.0" roughness="0.3"/>
		<look name="seabed" rgb="0.7 0.7 0.5" roughness="0.9"/>
	</looks>

	<static name="Bottom" type="plane">
		<material name="Rock"/>
		<look name="seabed"/>
		<world_transform rpy="0.0 0.0 0.0" xyz="0.0 0.0 5.0"/>
	</static>

	<!-- WAYPOINT 0: Start (Green) - NED (0, 0, 3) -->
	<static name="Waypoint0" type="sphere">
		<dimensions radius="0.4"/>
		<material name="Neutral"/>
		<look name="green"/>
		<world_transform rpy="0.0 0.0 0.0" xyz="0.0 0.0 -1.0"/>
	</static>

	<!-- WAYPOINT 1: (Orange) - NED (10, 0, 3) -->
	<static name="Waypoint1" type="sphere">
		<dimensions radius="0.4"/>
		<material name="Neutral"/>
		<look name="orange"/>
		<world_transform rpy="0.0 0.0 0.0" xyz="10.0 0.0 -1.0"/>
	</static>

	<!-- WAYPOINT 2: (Magenta) - NED (10, 10, 3) -->
	<static name="Waypoint2" type="sphere">
		<dimensions radius="0.4"/>
		<material name="Neutral"/>
		<look name="magenta"/>
		<world_transform rpy="0.0 0.0 0.0" xyz="10.0 10.0 -1.0"/>
	</static>

	<!-- WAYPOINT 3: (Light Blue) - NED (0, 10, 3) -->
	<static name="Waypoint3" type="sphere">
		<dimensions radius="0.4"/>
		<material name="Neutral"/>
		<look name="lightblue"/>
		<world_transform rpy="0.0 0.0 0.0" xyz="0.0 10.0 -1.0"/>
	</static>

    <include file="girona500auv_console.scn">
		<arg name="robot_name" value="GIRONA500"/>
	</include>
</scenario>